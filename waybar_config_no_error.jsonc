{
    "layer": "top",
    "position": "top", 
    "height": 30,
    "spacing": 5,
    "margin-bottom": -11,
    "modules-left": ["hyprland/workspaces"],
    "modules-center": ["custom/island"],
    "modules-right": [
        "keyboard-state",
        "temperature", 
        "custom/ss",
        "custom/cycle_wall",
        "custom/expand",
        "power-profiles-daemon",
        "pulseaudio",
        "backlight",
        "cpu",
        "clock",
        "tray",
        "custom/power"
    ],
    
    "hyprland/workspaces": {
        "format": "{icon}",
        "format-active": " {icon} ",
        "on-click": "activate"
    },
    
    "power-profiles-daemon": {
        "format": "{icon}",
        "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
        "tooltip": true,
        "format-icons": {
            "default": "ïƒ§",
            "performance": "ïƒ§", 
            "balanced": "ï‰",
            "power-saver": "ï¬"
        }
    },
    
    "pulseaudio": {
        "format": "{volume}% {icon} {format_source}",
        "format-bluetooth": "{volume}% {icon}ïŠ” {format_source}",
        "format-bluetooth-muted": "ïš© {icon}ïŠ” {format_source}",
        "format-muted": "ïš© {format_source}",
        "format-source": "{volume}% ï„°",
        "format-source-muted": "ï„±",
        "format-icons": {
            "headphone": "ï€¥",
            "hands-free": "ï–", 
            "headset": "ï–",
            "phone": "ï‚•",
            "portable": "ï‚•",
            "car": "ï†¹",
            "default": ["ï€¦", "ï€§", "ï€¨"]
        },
        "on-click": "pavucontrol"
    },
    
    "tray": {
        "icon-size": 16,
        "spacing": 8
    },
    
    "custom/island": {
        "exec": "~/.config/hypr/scripts/tools/start_island",
        "return-type": "json",
        "on-click": "mpc toggle",
        "escape": true
    },
    
    "backlight": {
        "format": "{percent}% {icon}",
        "format-icons": ["î", "î“", "î‘", "î", "î", "î", "îŠ", "îˆ", "î›"]
    },
    
    "cpu": {
        "format": "{usage}% ï‹›",
        "tooltip": false
    },
    
    "custom/power": {
        "format": "â» ",
        "tooltip": false,
        "menu": "on-click",
        "menu-file": "$HOME/.config/waybar/power_menu.xml",
        "menu-actions": {
            "shutdown": "poweroff",
            "reboot": "reboot", 
            "suspend": "systemctl suspend",
            "hibernate": "systemctl hibernate"
        }
    },
    
    "custom/ss": {
        "format": "{}",
        "exec": "~/.config/hypr/scripts/tools/expand ss-icon 2>/dev/null || echo ''",
        "on-click": "~/.config/hypr/scripts/screenshot_full 2>/dev/null"
    },
    
    "custom/cycle_wall": {
        "format": "{}",
        "exec": "~/.config/hypr/scripts/tools/expand wall 2>/dev/null || echo ''",
        "on-click": "~/.config/hypr/scripts/tools/expand cycle 2>/dev/null"
    },
    
    "custom/expand": {
        "on-click": "~/.config/hypr/scripts/expand_toolbar 2>/dev/null",
        "format": "{}",
        "exec": "~/.config/hypr/scripts/tools/expand arrow-icon 2>/dev/null || echo ''"
    },
    
    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "ï€£",
            "unlocked": "ï‚œ"
        }
    },
    
    "temperature": {
        "critical-threshold": 80,
        "format": "{temperatureC}Â°C {icon}",
        "format-icons": ["ï«", "ï‹‰", "ï©"]
    },
    
    "clock": {
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "interval": 60,
        "format": "{:%I:%M}",
        "max-length": 25
    },
    
    "memory": {
        "format": "{}% ïƒ‰"
    },
    
    "battery": {
        "states": {
            "warning": 50,
            "critical": 20
        },
        "format": "{icon}",
        "format-charging": "",
        "format-plugged": "",
        "format-icons": ["ï•¹", "ï•»", "ï•½", "ï•¿", "ï•¸"]
    },
    
    "battery#bat2": {
        "bat": "BAT2"
    },
    
    "network": {
        "format-wifi": "",
        "format-ethernet": "",
        "tooltip-format": "via {gwaddr} {ifname}ï–",
        "format-linked": "",
        "format-disconnected": "wifi",
        "format-alt": "   "
    },
    
    "custom/media": {
        "format": "{icon} {}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ï†¼",
            "default": "ğŸœ"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null"
    }
}